<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>
  <label>name:</label>
  <input type="text" name="pet[name]" id="pet_name">

  <br>
  <h2>Choose an existing owner</h2>
  <% @owners.each do |owner|%>
      <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
  <br>
  <h2>Create a new owner</h2>
  <p>Owner name: <input type="text" name="owner[name]" id="owner_name"></p>
</br>

  <input type="submit" value="Create Pet">
</form>
